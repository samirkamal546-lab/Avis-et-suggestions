    <script>
        // Gestion des onglets
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                // Désactiver tous les onglets
                document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                
                // Activer l'onglet cliqué
                tab.classList.add('active');
                const tabId = tab.getAttribute('data-tab') + '-tab';
                document.getElementById(tabId).classList.add('active');
            });
        });
        
        // Soumission du questionnaire
        document.getElementById('submit-questionnaire').addEventListener('click', () => {
            const company = document.getElementById('company').value;
            const field = document.getElementById('field').value;
            const location = document.getElementById('location').value;
            const experience = document.getElementById('experience').value;
            const rating = document.getElementById('rating').value;
            
            if (!company || !field || !location || !experience) {
                alert('Veuillez remplir tous les champs obligatoires.');
                return;
            }
            
            // Afficher le message de succès
            const successMessage = document.getElementById('success-message');
            successMessage.style.display = 'block';
            
            // Réinitialiser le formulaire
            document.getElementById('company').value = '';
            document.getElementById('field').value = '';
            document.getElementById('location').value = '';
            document.getElementById('experience').value = '';
            document.getElementById('rating').value = '5';
            
            // Rediriger vers l'onglet des suggestions après 2 secondes
            setTimeout(() => {
                successMessage.style.display = 'none';
                document.querySelector('[data-tab="suggestions"]').click();
            }, 2000);
        });
        
        // Affichage des suggestions par ville
        document.getElementById('view-suggestions').addEventListener('click', () => {
            const userLocation = document.getElementById('user-location').value.trim();
            
            if (!userLocation) {
                alert('Veuillez entrer votre ville.');
                return;
            }
            
            // Masquer la section de saisie de la ville
            document.getElementById('location-input-section').style.display = 'none';
            
            // Afficher les résultats
            document.getElementById('suggestions-results').style.display = 'block';
            
            // Générer des suggestions basées sur la ville (simulées)
            const suggestionsList = document.getElementById('suggestions-list');
            suggestionsList.innerHTML = '';
            
            // Données simulées pour les suggestions
            const suggestions = [
                { name: 'ONCF', field: 'Cybersécurité, Data Science', rating: 4.5 },
                { name: 'Inwi', field: 'Réseaux, Cybersécurité', rating: 4.2 },
                { name: 'Orange', field: 'Réseaux, Commerce', rating: 4.0 },
                { name: 'Oracle', field: 'IA, Cloud, Data Science', rating: 4.7 },
                { name: '3T Développement', field: 'Data Science', rating: 3.8 },
                { name: 'Lotus Capital', field: 'Data Science, Cybersécurité', rating: 4.3 },
                { name: 'Sofrecom', field: 'Data Science, IA, Développement', rating: 4.1 }
            ];
            
            suggestions.forEach(suggestion => {
                const card = document.createElement('div');
                card.className = 'suggestion-card';
                card.innerHTML = `
                    <h4>${suggestion.name}</h4>
                    <p><strong>Domaine:</strong> ${suggestion.field}</p>
                    <p><strong>Note moyenne:</strong> ${suggestion.rating}/5</p>
                    <p><strong>Localisation:</strong> ${userLocation}</p>
                `;
                suggestionsList.appendChild(card);
            });
        });
        
        // Changer de ville
        document.getElementById('change-location').addEventListener('click', () => {
            document.getElementById('suggestions-results').style.display = 'none';
            document.getElementById('location-input-section').style.display = 'block';
            document.getElementById('user-location').value = '';
        });
    </script>
</body>
